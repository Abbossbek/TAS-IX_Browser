<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_page"
        style="@style/CardView.Page"
        android:layout_margin="5dp"
        android:padding="10dp">

        <LinearLayout
            style="@style/Horizontal.LinearLayout"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cardview_page_icon"
                style="@style/ImageView.Icon"
                android:background="@drawable/ic_public_white_24dp" />

            <LinearLayout
                android:id="@+id/cardview_page_layout"
                style="@style/Vertical.LinearLayout"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/cardview_page_title"
                    style="@style/TextView.Title" />

                <TextView
                    android:id="@+id/cardview_page_url"
                    style="@style/TextView.Url" />
            </LinearLayout>

            <Button
                android:id="@+id/cardview_page_delete"
                style="@style/close.Button" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
